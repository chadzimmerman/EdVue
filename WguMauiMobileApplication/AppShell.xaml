<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WguMauiMobileApplication.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:WguMauiMobileApplication.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="WguMauiMobileApplication">

    <TabBar>
        <ShellContent
            Title="Courses"
            Icon="home.png"
            ContentTemplate="{DataTemplate pages:TermsPage}"
            Route="TermsPage"/>
        <ShellContent
            Title="Search"
            Icon="search.png"
            ContentTemplate="{DataTemplate pages:SearchPage}"
            Route="SearchPage"/>
        <ShellContent 
            Title="Reports" 
            Icon="report.png" 
            ContentTemplate="{DataTemplate pages:ReportsPage}" 
            Route="ReportsPage"/>
    </TabBar>
</Shell>
