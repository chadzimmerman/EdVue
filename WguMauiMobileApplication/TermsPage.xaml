<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WguMauiMobileApplication.TermsPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#E5E5E5"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:WguMauiMobileApplication;assembly=WguMauiMobileApplication"
             x:Name="RootPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <local:StatusToColorConverter x:Key="StatusToColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>


    <VerticalStackLayout Spacing="0">

        <Grid BackgroundColor="#0A2B4C" Padding="20" HeightRequest="80">
            <Entry Text="{Binding SelectedTerm.Title, Mode=TwoWay}"
                    Unfocused="TermTitleEntry_Unfocused"
                    TextColor="White"
                    FontSize="20"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    WidthRequest="200"
                    BackgroundColor="Transparent"
                    HorizontalTextAlignment="Center"/>
        </Grid>

        <VerticalStackLayout Padding="20" BackgroundColor="White" Spacing="10" Margin="10">
            <ScrollView Orientation="Horizontal" HeightRequest="50">
                <HorizontalStackLayout Spacing="10">
                    <BindableLayout.ItemsSource>
                        <Binding Path="Terms" />
                    </BindableLayout.ItemsSource>
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Button Text="{Binding Title}"
                                    BackgroundColor="LightGray"
                                    TextColor="Black"
                                    Command="{Binding BindingContext.SelectTermCommand, Source={x:Reference RootPage}}"
                                    CommandParameter="{Binding}" />
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </HorizontalStackLayout>
            </ScrollView>


            <VerticalStackLayout Spacing="10" Margin="0,10,0,0">
                <HorizontalStackLayout VerticalOptions="Center">
                    <Label Text="Start Date:" FontSize="16" WidthRequest="100"/>
                    <DatePicker Date="{Binding SelectedTerm.StartDate}" />
                </HorizontalStackLayout>
                <HorizontalStackLayout VerticalOptions="Center">
                    <Label Text="End Date:" FontSize="16" WidthRequest="100"/>
                    <DatePicker Date="{Binding SelectedTerm.EndDate}" />
                </HorizontalStackLayout>
            </VerticalStackLayout>

            
        </VerticalStackLayout>
        <VerticalStackLayout Padding="20" BackgroundColor="White" Spacing="10" Margin="10">
            <Label Text="Active" FontAttributes="Bold" FontSize="20" Margin="0,20,0,10"/>
            <CollectionView x:Name="CourseViewList" ItemsSource="{Binding Courses}" SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray" Padding="0" Margin="0,0,0,10" HasShadow="True">
                            <VerticalStackLayout Spacing="0">

                                <!-- ðŸ”· Header color bar -->
                                <BoxView
                                    HeightRequest="10"
                                    Color="{Binding IsActive, Converter={StaticResource StatusToColorConverter}}"
                                    HorizontalOptions="Fill" />

                                <!-- ðŸ“„ Course info -->
                                <VerticalStackLayout Padding="10">
                                    <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold"/>
                                    <Label Text="{Binding Code}" FontSize="14" />
                                    <Label Text="{Binding Status}" FontSize="14" />
                                    <Button Text="Course Info"
                                            Command="{Binding BindingContext.NavigateToCourseCommand, Source={x:Reference RootPage}}"
                                            CommandParameter="{Binding .}" />
                                </VerticalStackLayout>

                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
        <Button Text="Add Course"
                BackgroundColor="#0A2B4C"
                HorizontalOptions="Center"
                Margin="10"
                Command="{Binding AddCourseCommand}" />

    </VerticalStackLayout>
</ContentPage>
