<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WguMauiMobileApplication.CourseAssessmentsView">
    <VerticalStackLayout x:Name="AssessmentStack" Padding="10" Spacing="15">
            <Frame BorderColor="LightGray" Padding="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Add New Assessment" FontAttributes="Bold" />

                    <HorizontalStackLayout>
                        <Label Text="Type:" />
                        <Picker x:Name="AssessmentTypePicker" Title="Select Type">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>Objective</x:String>
                                    <x:String>Performance</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                    </HorizontalStackLayout>

                    <Entry x:Name="AssessmentNameEntry" Placeholder="Assessment Name" />

                    <DatePicker x:Name="AssessmentStartDate" />
                    <DatePicker x:Name="AssessmentEndDate" />

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Set Notification" />
                        <Switch x:Name="NotifySwitch" />
                    </StackLayout>

                <Button Text="Add Assesment" Clicked="OnAddAssessmentClicked" x:Name="AddAssessmentButton" />
                </VerticalStackLayout>
            </Frame>

            <Label Text="Assessments:" FontAttributes="Bold" />
            <CollectionView x:Name="AssessmentsListView" 
                            ItemsSource="{Binding Assessments}"
                            ItemsLayout="HorizontalList"
                            HeightRequest="300">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray" Margin="0,5" Padding="10">
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}" FontAttributes="Bold"/>
                                <Label Text="{Binding Type}" />
                                <Label Text="{Binding StartDate, StringFormat='Start: {0:d}'}" />
                                <Label Text="{Binding EndDate, StringFormat='End: {0:d}'}" />
                                <Label Text="{Binding Notify, StringFormat='Notify: {0}'}" />
                            <HorizontalStackLayout Spacing="10">
                                <Button Text="Edit"
                                        Clicked="OnEditAssessmentClicked"
                                        HorizontalOptions="Start"
                                        StyleClass="SmallButton"
                                        CommandParameter="{Binding Id}"/>

                                <Button Text="Delete"
                                        Clicked="OnDeleteAssessmentClicked"
                                        HorizontalOptions="End"
                                        StyleClass="SmallButton" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
</ContentView>
