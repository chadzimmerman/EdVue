<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WguMauiMobileApplication.Pages.DetailsPage"
             Title="DetailsPage">
    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="20">

            <Entry x:Name="TitleEntry" Placeholder="Course Title" />

            <DatePicker x:Name="StartDatePicker" />

            <DatePicker x:Name="EndDatePicker" />

            <Editor x:Name="DetailsEditor" HeightRequest="150" Placeholder="Course Details..." />

            <HorizontalStackLayout Spacing="20">
                <Button Text="Save" Clicked="OnSaveClicked" />
                <Button Text="Delete" TextColor="Red" Clicked="OnDeleteClicked" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>